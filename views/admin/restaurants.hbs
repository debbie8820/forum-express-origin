<h1>餐廳後台</h1>

<a href='/admin/restaurants/create' style="text-decoration: none;">
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<a href='/admin/users' style="text-decoration: none;">
  <button type="button" class="btn btn-outline-success">User Management</button>
</a>


<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/restaurants/{{this.id}}" style="text-decoration: none;">
            Show
          </a>
        </button>
        <button type="button" class="btn btn-link" style="text-decoration: none;">
          <a href="/admin/restaurants/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>