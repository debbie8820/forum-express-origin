<h1>TOP10人氣餐廳</h1>
<hr />

{{#each restaurants}}
<div class="card mb-3 d-flex justify-content-center" style="max-width: 100%;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image}}" alt="餐廳圖片">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數：{{this.totalFavoritedUsers}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex">
          <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
          {{#if this.isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
              class="btn btn-danger ml-1">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST"><button type="submit"
              class="btn btn-primary ml-1">加入最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}